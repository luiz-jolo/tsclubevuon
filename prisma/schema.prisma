// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id        String    @id @default(uuid())
  cpf       String    
  nome      String    
  fotourl   String?    
  seloid    String?
  pontos    Int       @default(0)
  createdAt DateTime? @default(now())
  @@map("cliente")
}

model Selo {
  id        String    @id @default(uuid())
  titulo    String    
  fotourl   String?   
  capafotourl   String?   

  @@map("selo")
}

model Selocliente {
  clientid    String    @id
  seloid      String?
  @@map("selocliente")
}

model Trilha {
  id       String    @id @default(uuid())
  titulo    String    
  descricao String    
  tipo      String    
  fotourl   String?   
  createdAt DateTime? @default(now())
  seloid    String?

  @@map("trilha")
}

model Trilhacliente {
  clientid        String    @id
  trilhaid        String?

  @@map("trilhacliente")
}